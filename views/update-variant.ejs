<%- include('partials/header') %>

<%- include('partials/nav') %>
<%- include('partials/banner') %>

  <div class="container mt-4">
  <h1>Update Variant - <%= variant.variant_name %></h1>
  <form action="/update-variant/<%= variant.variant_id %>" method="POST">
    <div class="mb-3">
      <label for="country" class="form-label">Country First Detected</label>
      <input type="text" class="form-control" id="country" name="country_first_detected" value="<%= variant.country_first_detected %>">
    </div>
    <div class="mb-3">
      <label for="classification" class="form-label">Classification</label>
      <select class="form-select" id="classification" name="classification_id">
        <% classifications.forEach(classification => { %>
          <option value="<%= classification.classification_id %>" <%= variant.classification_id === classification.classification_id ? 'selected' : '' %>><%= classification.classification %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

  <%- include('partials/footer') %>